= simple_form_for @user, html: { class: 'form-horizontal' } do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
    = f.error_notification

  .form-inputs
    = f.input :email, input_html: { maxlength: 20 }
    = f.input :password, hint: false, error_html: { id: 'password_error'}, input_html: { maxlength: 20 }
    = f.input :password_confirmation, input_html: { maxlength: 20 }

  .form-actions
    = f.button :submit
