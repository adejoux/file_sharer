.container
  .col-md-12
    %br
    .breadcrumb
      - @folder.ancestors.each do |folder|
        = link_to folder.name, folder_path(folder)
        &gt;
      = @folder.name
  .col-md-2
    = link_to 'New document', new_document_path(folder: @folder),  {:remote => true, :data => { :toggle => 'modal', :target => '#modal-new-doc'},  :class => 'btn'}
    = link_to "new folder", new_folder_path(parent_id: @folder),  {:remote => true, :data => { :toggle => 'modal', :target => '#modal-new-folder'},  :class => 'btn'}
  .col-md-10
    %ul.listing
      - if @folder.parent_id
        %li
          = link_to folder_path(@folder.parent_id) do
            = image_tag image_path('mini_folder.png')
            = '.. back'
      - @folder.children.each do |folder|
        %li
          = link_to folder_path(folder) do
            = image_tag image_path('mini_folder.png')
            = folder.name
      - @folder.documents.each do |doc|
        %li
          = link_to doc.file_url do
            = image_tag image_path('mini_file.png')
            = doc.file_identifier
= render 'modal_new_doc'
= render 'modal_new_folder'


