%h1= "Folder #{@folder.name}"
%ul
  - if @folder.parent_folder
    %li
      = link_to folder_path(@folder.parent_folder) do
        = image_tag image_path('mini_folder.png')
      = link_to 'back', folder_path(@folder.parent_folder)
  - @folder.child_folders.each do |folder|
    %li
      = link_to folder_path(folder) do
        = image_tag image_path('mini_folder.png')
      = link_to folder.name, folder_path(folder)
  - @folder.documents.each do |doc|
    %li
      = link_to doc.file_url do
        = image_tag image_path('mini_file.png')
      = link_to doc.file_identifier, doc.file_url

= link_to 'New document', new_document_path(folder: @folder), class: "btn btn-primary"
= link_to 'New folder', new_folder_path(folder: @folder), class: "btn btn-primary"
